    <logger name="org.springframework" level="DEBUG"/>
    <logger name="org.apache.commons.httpclient" level="DEBUG"/>
    <logger name="httpclient.wire" level="DEBUG"/>
    <logger name="edu.wisc" level="DEBUG"/>
    <logger name="org.springframework.aop" level="DEBUG"/>
    <logger name="edu.wisc.hr.dao.perfmon" level="TRACE"/>
 -->
    
    <root level="TRACE">
        <appender-ref ref="NULL" />
    </root>
</configuration>
